<?xml version="1.0" encoding="UTF-8"?>
<BasePage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Moments.SendMomentPage"
	xmlns:local="clr-namespace:Moments;">
	<BasePage.Content>
		<StackLayout>
			<ListView x:Name="friendsListView"
				ItemsSource="{Binding Friends}"
				BackgroundColor="White"
				RowHeight="70">
				<ListView.ItemTemplate>
    				<DataTemplate>
      					<local:SendMomentCell />
    				</DataTemplate>
  				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</BasePage.Content>
</BasePage>